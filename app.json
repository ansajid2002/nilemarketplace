{
  "expo": {
    "name": "Nile Global Market place",
    "slug": "nile-marketplace",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon_new.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/mainlogovertical.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Nile Marketplace to access your media for profile pictures and review uploads."
        } 
      ],
      "expo-apple-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon_new.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/ss.mp3"
          ]
        }
      ]

    ],
    "assetBundlePatterns": [
      "*/"
    ],
    "ios": {
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSPhotoLibraryUsageDescription": "This app would require access to your gallary, Files in order to upload profile photos and post reviews.",
        "NSLocationWhenInUseUsageDescription": "This application would want to access your location to ensure shipping of your desired item is eligible.",
        "NSCameraUsageDescription": "This app would require access to your camera to upload profile photos and post reviews.",
        "LSApplicationQueriesSchemes": ["nilegmp.com", "admin.nilegmp.com"]
      
      },
      "bundleIdentifier": "com.ngmp1.ios",
      "googleServicesFile": "./GoogleService-Info.plist",
      "buildNumber": "7",
      "supportsTablet": true,
      "usesAppleSignIn": true
    },
    "android": {
      "package": "com.gsmash.nilegmp",
      "googleServicesFile": "./google-services.json",
      "versionCode": 4,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon_new.png",
        "backgroundColor": "#FFFFFF"
      },
      
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "6d967be9-80f6-4c34-8520-e8e53c626f9c"
      }
    },
    "scheme": "nile",
    "owner": "sajid.ansari"
  }
}
