{
  "expo": {
    "name": "Nile Global Market place",
    "slug": "nile-marketplace",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon_new.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/mainlogovertical.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        } 
      ],
      "expo-apple-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon_new.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/ss.mp3"
          ]
        }
      ]

    ],
    "assetBundlePatterns": [
      "*/"
    ],
    "ios": {
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification"
        ],
        "NSPhotoLibraryUsageDescription": "Allow Nilemarketplace to access your photos",
        "NSPhotoLibraryAddUsageDescription": "Allow Nilemarketplace to save photos",
        "NSLocationWhenInUseUsageDescription": "Allow Nilemarketplace to access your location when open.",
        "NSLocationUsageDescription": "Allow Nilemarketplace to access your location when open.",
        "NSCameraUsageDescription": "This app uses the camera to scan barcodes on event tickets.",
        "LSApplicationQueriesSchemes": ["nilegmp.com", "admin.nilegmp.com"]
        ,"photosPermission": "Allow Nilemarketplace access your photos.",
          "savePhotosPermission": "Allow Nilemarketplace to save photos."
      
      },
      "bundleIdentifier": "com.gsmash.nilegmp",
      "googleServicesFile": "./GoogleService-Info.plist",
      "buildNumber": "7",
      "supportsTablet": true,
      "usesAppleSignIn": true
    },
    "android": {
      "package": "com.gsmash.nilegmp",
      "googleServicesFile": "./google-services.json",
      "versionCode": 4,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon_new.png",
        "backgroundColor": "#FFFFFF"
      },
      
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "6d967be9-80f6-4c34-8520-e8e53c626f9c"
      }
    },
    "scheme": "nile",
    "owner": "sajid.ansari"
  }
}
